################### THEME ###################

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $super_mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $super_mod+Shift+g mode "default"
}

exec_always pkill waybar && waybar -c ~/.config/sway/waybar/config.json --style ~/.config/sway/waybar/style.css & disown

exec swayidle -w \
	timeout 1800 'swaylock -c 121212 -k --indicator-idle-visible -f' \
	timeout 1805 'swaymsg "output * power off"' \
	resume 'swaymsg "output * power on"'

